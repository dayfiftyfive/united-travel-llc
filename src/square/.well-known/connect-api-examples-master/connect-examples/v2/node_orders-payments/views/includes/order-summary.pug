div(class="panel clearfix")
    h4(class="panel-title") Order Summary
    div(class="line-items")
        div(class="line-item clearfix")
            div(class="left")
                if item.imageUrl
                    img(alt="item" src=item.imageUrl)
            div(class="left") 1 Ã— #{item.name}
            div(class="right")
                strong $#{item.price}
    div(class="clearfix")
        div(class="left")
            strong Total
        div(class="right tabular-figures")
            strong $#{item.price}
    if payment
        div(class="card-details") #{payment.cardBrand} #{payment.last4Digits}

