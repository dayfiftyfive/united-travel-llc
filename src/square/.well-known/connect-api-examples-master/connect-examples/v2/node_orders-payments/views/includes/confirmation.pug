div(class="panel pickup-details" , style="height: fit-content;")
  //- p #{result}
  h4(class="panel-title") Pickup Details
  div(class="line-item line-items clearfix pickup-address confirmation")
    div(class="left") Order Id
    div(class="right")
      div #{order.orderId}
  div(class="line-item line-items clearfix pickup-address confirmation")
    div(class="left") Pickup Name
    div(class="right")
      div #{order.recipientName}  
  div(class="line-item line-items clearfix pickup-address confirmation")
    div(class="left") Time
    div(class="right", id="pickup-date") 
      div #{order.pickupTime}
  div(class="clearfix pickup-address")
    div(class="left") Location
    div(class="right")
      div #{location.storeName}
      div #{location.addressLine}
      div #{location.cityStateZip}
